{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./scripts",
    "./contracts",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "frontend"
  ],
  "files": ["./hardhat.config.ts"]
}
