{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": false,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": [
    "./scripts/**/*",
    "./contracts.config.ts",
    "./hardhat.config.ts",
    "./hardhat-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "frontend",
    "dist",
    "artifacts",
    "cache"
  ],
  "files": [
    "./hardhat.config.ts"
  ],
  "ts-node": {
    "files": true
  }
}
